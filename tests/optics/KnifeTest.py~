import optics.lens as len
import optics.analysis as anal
import matplotlib.pyplot as plt
import vector
import optics.ray as ray

def main():

    lens = len.DataBaseLens()

    cp = lens.cardinalPoints()
    fl = lens.focalLength()

    output = ana.OpticalImage(cp[1] + vector.Vector3d(0,0,fl), 20,20)

    pencil = ray.RayPencil().addCollimatedBeam(lens,vector.Unit3d(0,0,1),\
                                               "array")

    pencil *= lens
    pencil *= output

    output.draw()
    plt.show()

main()
    
